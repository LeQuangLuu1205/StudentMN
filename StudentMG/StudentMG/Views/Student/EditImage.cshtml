@model StudentMG.ViewModels.ImageVM

@{
    ViewData["Title"] = "EditImage";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
}

<h1>EditImage</h1>

<h4>ImageVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditImage">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="No" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Source" class="control-label"></label>
                <input type="file" id= "chooseImg" asp-for="Source" class="form-control" />
                <span asp-validation-for="Source" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-4">
                    <img src="~/assets/img/info/@Model.Source"
                        id="imgPreview" style="width:100px; height:100px; border:1px solid red;
                     border-radius:10px; padding:10px" alt="Your image"/>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section scripts {
    <script src="~/js/Preview.js"></script>
}