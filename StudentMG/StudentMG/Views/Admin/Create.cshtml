@model StudentMG.ViewModels.Student2VM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    /* Định dạng cho nhãn label */
    label {
        font-weight: bold; /* Chữ in đậm */
        margin-bottom: 5px; /* Khoảng cách dưới */
    }

    /* Định dạng cho input và select */
    input[type="text"],
    input[type="password"],
    select {
        width: 100%; /* Chiều rộng 100% */
        padding: 10px; /* Khoảng cách bên trong */
        margin-bottom: 20px; /* Khoảng cách dưới */
        border: 1px solid #ccc; /* Viền */
        border-radius: 5px; /* Độ cong góc */
        box-sizing: border-box; /* Kích thước tính cả viền */
    }

    /* Định dạng cho nút Create */
    .btn-create {
        background-color: #007bff; /* Màu nền xanh dương */
        color: #fff; /* Màu chữ trắng */
        border: none; /* Không viền */
        border-radius: 5px; /* Độ cong góc */
        padding: 12px 20px; /* Khoảng cách bên trong */
        cursor: pointer; /* Con trỏ khi rê chuột */
        transition: background-color 0.3s; /* Hiệu ứng khi hover */
    }

        .btn-create:hover {
            background-color: #0056b3; /* Màu nền xanh dương nhạt khi hover */
        }

    /* Định dạng cho thông báo lỗi */
    .text-danger {
        color: #dc3545; /* Màu chữ đỏ */
    }

    .input-short {
        width: 150px; /* Chiều rộng của input */
    }

    .form-wrapper {
        background-color: #fff;
        padding: 30px;
        margin-top: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
</style>

<div class="container" style="height: 100vh;">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="form-wrapper">
                <form asp-action="Create">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Student.StudentId"></label>
                                <input asp-for="Student.StudentId" class="form-control" />
                                <span asp-validation-for="Student.StudentId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Student.Username"></label>
                                <input asp-for="Student.Username" class="form-control" />
                                <span asp-validation-for="Student.Username" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Student.Password"></label>
                                <input asp-for="Student.Password" class="form-control" />
                                <span asp-validation-for="Student.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Student.Fullname"></label>
                                <input asp-for="Student.Fullname" class="form-control" />
                                <span asp-validation-for="Student.Fullname" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Student.Email"></label>
                                <input asp-for="Student.Email" class="form-control" />
                                <span asp-validation-for="Student.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Student.PhoneNumber"></label>
                                <input asp-for="Student.PhoneNumber" class="form-control" />
                                <span asp-validation-for="Student.PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Student.DoB"></label>
                                <input asp-for="Student.DoB" class="form-control" type="date" />
                                <span asp-validation-for="Student.DoB" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Student.Gender"></label>
                                <select asp-for="Student.Gender" class="form-control">
                                    <option value="">Select Gender</option>
                                    <option value="true">Male</option>
                                    <option value="false">Female</option>
                                </select>
                                <span asp-validation-for="Student.Gender" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Student.Address"></label>
                                <input asp-for="Student.Address" class="form-control" />
                                <span asp-validation-for="Student.Address" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Student.NoIdentity"></label>
                                <input asp-for="Student.NoIdentity" class="form-control" />
                                <span asp-validation-for="Student.NoIdentity" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Student.Role"></label>
                                <input asp-for="Student.Role" class="form-control" />
                                <span asp-validation-for="Student.Role" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Student.IsExist"></label>
                                <input asp-for="Student.IsExist" class="form-control" />
                                <span asp-validation-for="Student.IsExist" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Student.RandomKey"></label>
                                <input asp-for="Student.RandomKey" class="form-control" />
                                <span asp-validation-for="Student.RandomKey" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Student.ClassId"></label>
                                <select asp-for="Student.ClassId" class="form-control" asp-items="Model.Classes">
                                    <option value="">Select Class</option>
                                </select>
                                <span asp-validation-for="Student.ClassId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-create">Create</button>
                </form>
            </div>
        </div>
    </div>
</div>